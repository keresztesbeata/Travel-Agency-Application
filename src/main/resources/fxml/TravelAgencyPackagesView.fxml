<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane styleClass="background" stylesheets="/styles/style.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="presentation.controller.TravelAgencyPackagesController">
    <children>
        <VBox alignment="CENTER" prefHeight="570.0" prefWidth="1050.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <MenuBar nodeOrientation="LEFT_TO_RIGHT" prefHeight="31.0" prefWidth="850.0">
                    <menus>
                        <Menu mnemonicParsing="false" text="Menu">
                            <items>
                                <MenuItem mnemonicParsing="false" onAction="#onReload" text="View packages" />
                                <MenuItem mnemonicParsing="false" onAction="#onViewDestinations" text="View destinations" />
                                <MenuItem mnemonicParsing="false" onAction="#onLogOut" text="Log out" />
                            </items>
                        </Menu>
                    </menus>
                </MenuBar>
                <VBox>
                <HBox alignment="CENTER" prefHeight="36.0" prefWidth="850.0" spacing="30.0">
                    <children>
                        <CheckBox fx:id="notBookedChoiceBox" mnemonicParsing="false" text="Not booked" />
                        <CheckBox fx:id="inProgressChoiceBox" mnemonicParsing="false" text="In progress" />
                        <CheckBox fx:id="bookedChoiceBox" mnemonicParsing="false" text="Booked" />
                        <Button fx:id="filterButton" mnemonicParsing="false" onAction="#onFilterByStatus" text="Filter by status" />
                    </children>
                    <opaqueInsets>
                        <Insets />
                    </opaqueInsets>
                    <padding>
                        <Insets bottom="10.0" top="10.0" />
                    </padding>
                </HBox>
                    <HBox alignment="CENTER" prefHeight="36.0" prefWidth="850.0" spacing="30.0">
                        <Button fx:id="addPackageButton" mnemonicParsing="false" onAction="#onAddNewPackage" text="Add a new package" />
                        <Button fx:id="deletePackageButton" mnemonicParsing="false" onAction="#onDeletePackage" text="Delete the selected package" />
                  <padding>
                     <Insets bottom="10.0" top="10.0" />
                  </padding>
                     </HBox>
                </VBox>
                <ScrollPane fitToWidth="true" vbarPolicy="ALWAYS">
                    <content>
                        <TableView fx:id="vacationPackagesTable">
                            <columns>
                                    <TableColumn prefWidth="75.0" text="Name" />
                                    <TableColumn prefWidth="75.0" text="Destination" />
                                    <TableColumn prefWidth="75.0" text="Details" />
                                    <TableColumn prefWidth="75.0" text="Price" />
                                    <TableColumn prefWidth="75.0" text="From" />
                                    <TableColumn prefWidth="75.0" text="To" />
                                    <TableColumn prefWidth="75.0" text="Package status" />
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                        </TableView>
                    </content>
                </ScrollPane>
            </children>
        </VBox>
    </children>
</AnchorPane>
